# LLM Provider Configuration (only needed for backend mode)
LLM_PROVIDER=openai-compatible
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4o-mini

# Database (SQLite file path, relative to project root - only needed for backend mode)
DATABASE_URL="file:./dev.db"

# Demo Mode Configuration (for GitHub Pages deployment)
# Set to 'true' to enable demo mode (uses localStorage instead of database)
NEXT_PUBLIC_DEMO_MODE=false

# Base path for deployment (e.g., /repo-name for GitHub Pages)
# Leave empty if deploying to root domain
NEXT_PUBLIC_BASE_PATH=
